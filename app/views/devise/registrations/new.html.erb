<div class="body text-center">
  <div class="form-signin fadeIn animated">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <img class="mb-4" src="/docs/4.3/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
      <h1 class="h3 mb-3 font-weight-normal">Enregistrement</h1>

      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>

      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Mot de passe", class: "form-control" %>

      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmation mot de passe", class: "form-control" %>

      <button class="btn btn-lg btn-success btn-block" type="submit">SAUVEGARDER</button>
      <div class="share mt-2"><%= render "devise/shared/links" %></div>
    <% end %>
  </div>
</div>
